<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.mapper.UserMapper">
	<resultMap type="com.smhrd.entity.User" id="UserResultMap">
      <id property="userId" column="USER_ID"/>
      <result property="userPw" column="USER_PW"/>
      <result property="userNm" column="USER_NM"/>
      <result property="userBirthdate" column="USER_BIRTHDATE"/>
      <result property="userRole" column="USER_ROLE"/>
      <result property="joinedAt" column="JOINED_AT"/>
   </resultMap>
	
	<select id="getUserByIdPw" resultType="com.smhrd.entity.User" resultMap="UserResultMap">
		select * from USERS where USER_ID=#{userId} and USER_PW=#{userPw}
	</select>
</mapper>